{
    "compilerOptions": {
        "alwaysStrict": true,
        "noImplicitAny": true,
        "target": "ES6",
        "moduleResolution": "node",
        "module": "ES6",
        "allowJs": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "incremental": true,
        "tsBuildInfoFile": "dist/.tsbuildinfo",
        "strictNullChecks": true
    },
    "include": [
        "./src/*"
    ]
}